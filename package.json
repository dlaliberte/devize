{
  "name": "devize",
  "version": "1.0.0",
  "description": "A declarative, constraint-based data visualization library",
  "type": "module",
  "main": "dist/devize.js",
  "module": "dist/devize.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "serve": "tsx src/server/index.ts"
  },
  "keywords": [
    "data",
    "visualization",
    "typescript",
    "svg",
    "declarative"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "three": "^0.157.0"
  },
  "devDependencies": {
    "@fastify/static": "^6.11.2",
    "@fastify/vite": "^4.0.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "@types/chai": "^4.3.20",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.6",
    "@types/sinon": "^17.0.4",
    "@types/three": "^0.157.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "chai": "^5.2.0",
    "eslint": "^8.51.0",
    "fastify": "^4.24.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.3",
    "sinon": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^0.34.6"
  },
  "files": [
    "dist"
  ]
}
